{% extends "EdahiraDahiraBundle::layout.html.twig" %}

{% trans_default_domain 'EdahiraDahiraBundle' %}

{% block stylesheets %}
	{{ parent() }}
	<style>
		#edahira_dahirabundle_charges_echeance select{
		    width:73px
		}
	</style>
{% endblock %}

{% block title %}{{ parent()}} | {{'label.charge' | lower | trans }}{% endblock %}

{% block body_header %}
	
	{% if charge.id %}
		<h1>{{ 'text.modification' | trans({'%objet%': 'charge'}) }}</h1>
	{% else %}
		<h1>{{ 'text.nouvelle' | trans({'%objet%': 'charge'}) }}</h1>
	{% endif %}

{% endblock %}

{% block body_content%}
	{{ parent() }}

	{% if form is defined %}
		{% include "EdahiraDahiraBundle:Charges:formCharges.html.twig" %}
	{% endif %}
{% endblock %}