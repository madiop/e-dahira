{% extends "EdahiraDahiraBundle::layout.html.twig" %}

{% block title %}{{ 'membre.liste' | trans }}{% endblock %}

{% block body_header %}
	<h1>{{ 'membre.liste' | trans }}</h1>
{% endblock %}
{% block body_content %}
	{% for message in app.session.flashbag.get('info') %}
	<p>{{ message }}</p>
	{% endfor %}
	
	{% if membres | length > 0 %}
		<table class="table table-striped table-bordered table-condensed">
			<thead>
				<tr>
					<th>{{ 'label.prenom'| trans }}</th>
					<th>{{ 'label.nom'| trans }}</th>
					<th>{{ 'label.adresse'| trans }}</th>
					<th>{{ 'label.email'| trans }}</th>
					<th>{{ 'label.tel1'| trans }}</th>
					<th>{{ 'label.tel2'| trans }}</th>
					<th>{{ 'label.etat'| trans }}</th>
					<th>{{ 'label.action'| trans }}</th>
				</tr>
			</thead>
			<tbody>
			{% for membre in membres %}
				<tr class="list-users">
					<td>{{ membre.prenom }}</td>
					<td>{{ membre.nom }}</td>
					<td>{{ membre.adresse }}</td>
					<td>{{ membre.email }}</td>
					<td>{{ membre.telephone1 }}</td>
					<td>{{ membre.telephone2 }}</td>
					{% if membre.etat == true %}
						<td><span class="label label-success">Actif</span></td>
					{% else %}
						<td><span class="label label-important">Inactif</span></td>
					{% endif %}
					<td>
						<div class="btn-group">
							<a class="btn btn-mini dropdown-toggle" data-toggle="dropdown" href="#">Actions <span class="caret"></span></a>
							<ul class="dropdown-menu">
								<li><a href="{{ path('membre_editer', {'id': membre.id}) }}"><i class="icon-pencil"></i> {{ 'action.edit' |trans }}</a></li>
								<li><a href="{{ path('membre_supprimer', {'id': membre.id}) }}"><i class="icon-trash"></i> {{ 'action.delete' |trans }}</a></li>
								<li><a href="{{ path('membre_afficher', {'id': membre.id}) }}"><i class="icon-user"></i> {{ 'action.details' |trans }}</a></li>
							</ul>
						</div>
					</td>
				</tr>
			{% endfor %}
			</tbody>
		</table>
		<div class="pagination">
			<ul>
				{% for p in range(1, nombrePage) %}
				<li{% if p == page %} class="active"{% endif %}>
					<a href="{{ path('membre_index', {'page': p}) }}">{{ p}}</a>
				</li>
				{% endfor %}
			</ul>
		</div>
		{% else %}
			<p>{{ 'text.membre.aucun' | trans }}</p>
		{% endif %}
	<a href="{{ path('membre_editer') }}" class="btn btn-success">{{ 'label.ajouter' | trans }}</a>

{% endblock %}