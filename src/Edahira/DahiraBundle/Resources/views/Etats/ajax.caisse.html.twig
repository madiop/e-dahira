{% trans_default_domain 'EdahiraDahiraBundle' %}

{% if caisse is not null %}

	<b>{{ 'label.balancecaisse' | trans }}: {{ getFond(caisse) }}</b> FCFA
	<br/>
	<br/>

	<table class="table table-striped table-bordered table-condensed">
		<thead>
			<tr>
				<th>{{ 'label.element'| trans }}</th>
				<th>{{ 'label.montant'| trans }}</th>
			</tr>
		</thead>
		<tbody>
			<tr class="">
				<td>{{ 'label.fond'| trans | capitalize }}</td>
				<td>{{ caisse.fond | number_format(0, ',', '.') }} </td>
			</tr>
			<tr class="">
				<td>{{ 'label.charge'| trans | capitalize }}</td>
				<td>{{ getFondCharge(caisse) | number_format(0, ',', '.') }} </td>
			</tr>
		{% for type in caisse.typeevenement %}
			<tr class="">
				<td>{{ type.nom }}</td>
				<td>{{ getFondTypeEvent(caisse, type) | number_format(0, ',', '.') }} </td>
			</tr>			
		{% endfor %}
		    <tr class="">
				<td>{{ 'label.depense' | trans | capitalize }}</td>
				<td>{{ getDepenses(caisse) | number_format(0, ',', '.') }} </td>
			</tr>
		</tbody>
	</table>
{% else %}
    <span class='alert alert-info'>{{ 'action.caisse.choose' | trans }}</span>
{% endif %}