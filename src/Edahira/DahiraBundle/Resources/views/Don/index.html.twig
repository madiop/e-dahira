{% trans_default_domain 'EdahiraDahiraBundle' %}

{% if dons | length > 0 %}
	<table style="width:40%" class="table table-striped table-bordered table-condensed">
		<thead>
			<tr>
				<th>{{ 'label.donnateur' | trans }}</th>
				<th>{{ 'label.montant' | trans }}</th>
				<th>{{ 'label.actions' | trans }}</th>
			</tr>
		</thead>
		<tbody>
		{% for don in dons %}
			<tr class="list-users">
				<td>{{ don.donnateur }}</td>
				<td>{{ don.montant }}</td>
				<td>
					<div class="btn-group">
						<a class="btn btn-mini dropdown-toggle" data-toggle="dropdown" href="#">{{ 'label.actions'| trans }} <span class="caret"></span></a>
						<ul class="dropdown-menu">
							<li><a href="javascript:;" onClick="editDon('{{ path('don_editer', {'idType': object.id, 'type': 1, 'id': don.id})}}');"><i class="icon-pencil"></i> {{ 'action.edit' |trans }}</a></li>
							<li><a href="{{ path('don_supprimer', {'idType': object.id, 'type': type, 'id': don.id}) }}"><i class="icon-trash"></i> {{ 'action.delete' |trans }}</a></li>
						</ul>
					</div>
				</td>
			</tr>
		{% endfor %}
		</tbody>
	</table>
{% else %}
	<p>{{ 'text.aucun' | trans({'%objet%': 'don'}) }}</p>
{% endif %}