{% extends "EdahiraDahiraBundle::layout.html.twig" %}
{% block title %}{{ 'titre.typeevenement.list' | trans }}{% endblock %}

{% block body_header %}
	<h1>{{ 'titre.typeevenement.list' | trans }}</h1>
{% endblock %}
{% block body_content %}
	{% for message in app.session.flashbag.get('info') %}
	<p>{{ message }}</p>
	{% endfor %}
	
	{% if types | length > 0 %}
		<table class="table table-striped table-bordered table-condensed">
			<thead>
				<tr>
					<th>{{ 'label.nom'| trans }}</th>
					<th>{{ 'label.cotisation'| trans }}</th>
					<th>{{ 'label.periode'| trans }}</th>
					<th>{{ 'label.jourdesemaine'| trans }}</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
			{% for type in types %}
				<tr class="list-users">
					<td>{{ type.nom }}</td>
					<td>{{ type.cotisation }}</td>
					<td>{{ type.periode }}</td>
					<td>{{ type.jourdesemaine }}</td>
					<td>
						<div class="btn-group">
							<a class="btn btn-mini dropdown-toggle" data-toggle="dropdown" href="#">Actions <span class="caret"></span></a>
							<ul class="dropdown-menu">
								<li><a href="{{ path('typeevenement_editer', {'id': type.id}) }}"><i class="icon-pencil"></i> {{ 'action.edit' |trans }}</a></li>
								<li><a href="{{ path('typeevenement_supprimer', {'id': type.id}) }}"><i class="icon-trash"></i> {{ 'action.delete' |trans }}</a></li>
								<li><a href="{{ path('typeevenement_afficher', {'id': type.id}) }}"><i class="icon-user"></i> {{ 'action.details' |trans }}</a></li>
							</ul>
						</div>
					</td>
				</tr>
			{% endfor %}
			</tbody>
		</table>
		<div class="pagination">
			<ul>
				{% for p in range(1, nombrePage) %}
				<li{% if p == page %} class="active"{% endif %}>
					<a href="{{ path('typecaisse_index', {'page': p}) }}">{{ p}}</a>
				</li>
				{% endfor %}
			</ul>
		</div>
	{% else %}
		<p>{{ 'text.norecords' | trans }}</p>
	{% endif %}
	<a href="{{ path('typeevenement_editer') }}" class="btn btn-success">{{ 'label.ajouter' | trans }}</a>
{% endblock %}