{% extends "EdahiraDahiraBundle::layout.html.twig" %}

{% trans_default_domain 'EdahiraDahiraBundle' %}

{% block title %}{{ parent()}} | {{'label.categorie' | lower | trans }}{% endblock %}

{% block body_header %}
	<h1>{{ 'text.list' | trans({'%objet%': 'catégories'}) }}</h1>
{% endblock %}

{% block body_content %}
	{{ parent() }}
	
	{% if categories | length > 0 %}
		<table class="table table-striped table-bordered table-condensed">
			<thead>
				<tr>
					<th>{{ 'label.nom'| trans }}</th>
					<th>{{ 'label.actions'| trans }}</th>
				</tr>
			</thead>
			<tbody>
			{% for categorie in categories %}
				<tr class="list-users">
					<td>{{ categorie.nom }}</td>
					<td>
						<div class="btn-group">
							<a class="btn btn-mini dropdown-toggle" data-toggle="dropdown" href="#">{{ 'label.actions'| trans }} <span class="caret"></span></a>
							<ul class="dropdown-menu">
								<li><a href="{{ path('categorie_editer', {'id': categorie.id}) }}"><i class="icon-pencil"></i> {{ 'action.edit' |trans }}</a></li>
								<li><a href="{{ path('categorie_supprimer', {'id': categorie.id}) }}"><i class="icon-trash"></i> {{ 'action.delete' |trans }}</a></li>
							</ul>
						</div>
					</td>
				</tr>
			{% endfor %}
			</tbody>
		</table>
	{% else %}
		<p>{{ 'text.fem.aucun' | trans({'%objet%': 'catégorie'}) }}</p>
	{% endif %}
	<a href="{{ path('categorie_editer') }}" class="btn btn-success">{{ 'label.ajouter' | trans }}</a>
{% endblock %}