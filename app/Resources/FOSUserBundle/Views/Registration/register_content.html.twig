{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
	<div class="control-group">
    	<div class="controls">
	   		<span class="alert alert-info"><a href="{{ path('fos_user_security_login') }}" title=""> {{'layout.login' | trans }}</a></span>
	   	</div>
	</div>
    {{ form_widget(form) }}
    <div class="form-actions">
        <input type="submit" class="btn btn-success btn-large" value="{{ 'registration.submit'|trans }}" />
    </div>
</form>